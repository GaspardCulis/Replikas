---
import Layout from "../layouts/Layout.astro";
import SearchBar from "../components/SearchBar.astro";
import Article from "../components/Article.astro";

const text = Astro.url.searchParams.get("article");
---

<Layout title="Replikas" no_searchbar>
  <main>
    <div class="searchBar">
      <div id="searchBar">
        <SearchBar text={text} />
      </div>
      <div class="checkbox">
        <input type="checkbox" id="scales" name="scales" checked />
        <label for="enCour">Enchère en cours</label>
      </div>
    </div>
    <article>
      <Article
        titre="Casque de Dark Vador"
        image="casque_de_dark_vador.jpeg"
        date={new Date()}
        prix={2530}
      />
      <Article
        titre="Sabre laser"
        image="sabre_laser.jpeg"
        date={new Date()}
        prix={1320}
      />
      <Article
        titre="Casque de Dark Vador"
        image="casque_de_dark_vador.jpeg"
        date={new Date()}
        prix={2530}
      />
