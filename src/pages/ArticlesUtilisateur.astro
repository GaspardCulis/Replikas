<style>
    .sectionSearchBar{
        padding-right: 20%;
        padding-left: 20%;
    }
    .sectionArticles{
        display: flex;
        flex-wrap: wrap;
        background-color: #222222;
        border-radius: 5px;
        padding-left: 3rem;
        padding-right: 3rem;
        margin: 2rem;
    }
    div{
        display: flex;
        flex-wrap: wrap;
    }
    h1{
        color: whitesmoke;
