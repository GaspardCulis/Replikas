---
import Layout from "../layouts/Layout.astro";
import TextField from "../components/TextField.astro";
import Button from "../components/Button.astro";
---

<Layout title="contact">
  <main>
    <h1>Rejoignez-nous sur nos réseaux sociaux</h1>
    <div class="socials">
      <a href="https://fr-fr.facebook.com/DonaldTrump"
        ><img
          src="/img/icons/socials/facebook.svg"
          width="80px"
          height="80px"
          alt="Facebook"
        />
      </a>
      <a href="https://twitter.com/elonmusk"
        ><img
          src="/img/icons/socials/twitter.svg"
          width="80px"
          height="80px"
          alt="Twitter"
        />
      </a>
      <a href="https://www.instagram.com/hugodecrypte"
        ><img
          src="/img/icons/socials/instagram.svg"
          width="80px"
          height="80px"
          alt="Instagram"
        />
      </a>
      <a href="https://fr.linkedin.com/in/herv%C3%A9-blanchon-4851b02"
        ><img
          src="/img/icons/socials/linkedin.svg"
          width="80px"
          height="80px"
          alt="Linkedin"
        />
      </a>
      <a href="https://r.mtdv.me/replikas"
        ><img
          src="/img/icons/socials/youtube.svg"
          width="80px"
          height="80px"
          alt="Youtube"
        />
      </a>
    </div>
    <h1>Contactez-nous</h1>
    <form method="get" action="/">
      <div>
        <table>
          <tr>
            <th>E-mail :</th>
            <td>
              <TextField
                placeholder="Entrez votre e-mail"
                name="email"
                type="email"
                length="20rem"
              />
            </td>
          </tr>
          <tr>
            <th>Sujet :</th>
            <td
              ><TextField
                text=""
                placeholder="Entrez le sujet"
                length="20rem"
              /></td
            >
          </tr>
          <tr>
            <th id="message">Message :</th>
            <td>
              <textarea
                name="Message"
                id=""
                cols="80"
                rows="15"
                placeholder="Message"
              >
              </textarea>
            </td>
          </tr>
        </table>
      </div>
      <div id="button">
        <Button text="Envoyer" />
      </div>
    </form>
  </main>
</Layout>

<style>
  main {
    width: 80%;
    padding: 1.5rem 3rem;
    margin: 1rem auto;

    border-radius: 1rem;

    background-color: #222222;
  }

  /*---------Réseaux sociaux------------*/
  .socials {
    display: flex;
    justify-content: space-around;

    margin: auto;
    max-width: 500px;
  }

  /*----------Table-----------*/

  table {
    width: 80%;
    margin: auto;

    color: whitesmoke;
  }

  th {
    width: 20%;
    text-align: end;
  }

  #message {
    vertical-align: top;
    padding-top: 1.5rem;
  }

  textarea {
    border: none;
    background-color: whitesmoke;
    border-radius: 5px;
    margin: 1rem;
    padding: 0.7rem;
  }

  textarea:focus {
    outline: none;
  }

  /*------------Bouton envoyer---------------*/
  #button {
    text-align: center;
  }

  /*--------Texts-----------*/

  h1 {
    font-size: 2rem;
    color: whitesmoke;
  }
</style>
