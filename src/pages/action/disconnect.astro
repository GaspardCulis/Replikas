---
import Layout from "../../layouts/Layout.astro";
import Database from "../../model/Database";
import { addCookie } from "../../model/Utilitaire";

const cookies = Astro.request.headers.get("cookie");
if (cookies) {
	const token = (cookies.endsWith(";") ? cookies : cookies + ";").match(/token=([^;]*);/); // Recuperer le token de session
	if (token) {
		try {
			await Database.get()`DELETE FROM session WHERE s_token = ${token[1]}`; // Supprimer la session
		} catch (e) {
			console.error(e);
		}
	}
	// Supprimer le cookie
	const headers = new Headers();
	addCookie(headers, {
		name: "token",
		value: "deleted",
		maxAge: 0,
		path: "/",
	});
	headers.set("location", "/"); // Rediriger vers la page d'accueil
	return new Response("", {
		status: 302,
		headers,
	});
}
return Astro.redirect("/"); // Rediriger vers la page d'accueil
