---
export interface Props {
    id: number;
    titre: string;
    image: string;
    date: Date;
    prix: number;
    enCours?: boolean;
}

const { id, titre, image, date, prix, enCours } = Astro.props;
---

<li>
    <a href={'/article/' + id}>
        <div><img src={'/img/article/' + image} alt={titre} /></div>
        <h3>{titre}</h3>
        <p>
            {
                enCours
                    ? 'Se fini le ' + date.toLocaleDateString()
                    : 'Débute le ' + date.toLocaleDateString()
            }
        </p>
        <p>{prix} €</p>
    </a>
</li>

<style>
    li {
        width: 300px;
        margin: 20px;

        display: flex;
        flex-direction: column;

        background-color: #4b4e6d;

        border-radius: 10px;
        overflow: hidden;
    }

    li a {
        text-decoration: none;
        color: inherit;
    }

    div,
    img {
        width: 300px;
        height: 250px;
    }

    h3,
    p {
        color: whitesmoke;
        margin: 0;
        padding: 5px;
    }
</style>
