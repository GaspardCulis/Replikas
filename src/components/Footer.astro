<style>
	footer {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 1rem;
		background-color: var(--theme-secondary);

		flex-grow: 0;
		flex-shrink: 0;
	}

	footer h1 {
		font-size: 1.5rem;
		margin: 1rem;
		font-weight: bold;
	}

	footer #replika-info a {
		font-size: 1rem;
		margin: 0.4rem;
		text-decoration: none;
		color: inherit;
	}

	footer section {
		margin: 0.5rem;
	}

	footer #replika-info {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	footer #replika-socials {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	footer #replikas-team {
		display: flex;
		flex-direction: row;
		align-items: center;
	}

	footer #replikas-team img {
		width: 1.5rem;
		margin-right: -0.5rem;
	}

	/*------------Scale up buttons on hover-------------*/
	.hoverScale {
		transition: 0.5s ease;
	}

	.hoverScale:hover {
		scale: 1.2;
		transition: 0.5s ease;
	}
</style>
