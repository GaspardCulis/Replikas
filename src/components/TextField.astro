---
export interface Props {
	text?: string;
	placeholder?: string;
	name?: string;
	type?: any;
	length?: string;
}

const { text, placeholder, name, type, length } = Astro.props;
---

<input
	placeholder={placeholder}
	value={text}
	name={name}
	type={type || "text"}
/>

<br />
<style define:vars={{ length }}>
	input {
		border: none;
		background-color: whitesmoke;
		border-radius: 5px;
		margin: 1rem;
		padding: 0.7rem;
		font-size: 0.8rem;
		width: var(--length);
	}
	input:focus {
		outline: none;
	}
</style>
