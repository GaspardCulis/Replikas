---
export interface Props {
	text?: string;
	placeholder?: string;
}

const { text, placeholder } = Astro.props;
---

<input type="text" placeholder={placeholder} value={text} name="" id="" />

<br />
<style>
	input {
		border: none;
		background-color: whitesmoke;
		border-radius: 5px;
		margin: 1rem;
		padding: 0.7rem;
		font-size: 0.8rem;
	}
	input:focus {
		outline: none;
	}
</style>
