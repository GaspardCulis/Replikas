---
export interface Props {
    text?: string;
}

const { text } = Astro.props;
---

<form method="get" action="/search">
    <button type="submit">
        <img src="/img/icons/search.svg" alt="search" />
    </button>
    <input
        type="text"
        placeholder="Rechercher un article..."
        value={text}
        name="article"
        id="article"
    />
</form>
<script>
    const articleInput = document.getElementById('article') as HTMLInputElement;
    const article = new URLSearchParams(window.location.search).get('article');
    articleInput.value = article || '';
</script>
<style>
    form {
        display: flex;
        align-items: center;
        background-color: whitesmoke;
        border-radius: 15px;
        padding: 0.2rem;
        margin-right: 3rem;
        min-width: 400px;
    }
    button {
        background-color: transparent;
        border: none;

        display: flex;
        align-items: center;
        justify-content: center;
    }
    img {
        width: 3rem;
        height: 3rem;
    }
    input {
        border: none;
        background-color: transparent;
        font-size: 1rem;
        width: 100%;
        height: 3rem;
    }
    input:focus {
        outline: none;
    }
</style>
