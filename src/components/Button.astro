---
export interface Props {
    text?: string;
}

const { text } = Astro.props;
---

<input type="submit" value={text} name="" id=""/>

<style>
    input {
        border: none;
        color: whitesmoke;
        background-color: #353A4D;
        margin: 0.7rem;
        font-size: 1.2rem;
        font-weight: 600;
        padding: 0.7rem;
    }
</style>