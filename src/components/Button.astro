---
export interface Props {
	text?: string;
}

const { text } = Astro.props;
---

<input type="submit" value={text} name="" id="" />

<style>
	input {
		border: none;
		border-radius: 5px;
		color: whitesmoke;
		background-color: #353a4d;
		margin: 0.7rem;
		font-size: 1.2rem;
		font-weight: 600;
		padding: 0.7rem;
	}
</style>
